<tool id="emboss_coderet" name="coderet" version="@VERSION@">
  <description>Extract CDS, mRNA and translations from feature tables</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements" />
  <code file="emboss_format_corrector.py" />
  <command detect_errors="aggressive">coderet -seqall '$input1' -outfile '$out_file1' -cds $out_cds -mrna $out_mrna -translation $out_pep -restoutseq $out_rest -auto</command>
  <inputs>
    <param name="input1" type="data" format="data" label="On query" />
  </inputs>
  <outputs>
    <data name="out_file1" format="coderet" />
    <data name="out_cds" format="fasta" />
    <data name="out_mrna" format="fasta" />
    <data name="out_pep" format="fasta" />
    <data name="out_rest" format="fasta" />
  </outputs>
  <tests>
    <test>
      <param name="input1" value="2.fasta"/>
      <output name="out_file1" file="emboss_coderet_out.coderet"/>
    </test>
  </tests>
  <help>
    You can view the original documentation here_.

    .. _here: http://galaxy-iuc.github.io/emboss-5.0-docs/coderet.html
  </help>
  <expand macro="citations" />
</tool>
